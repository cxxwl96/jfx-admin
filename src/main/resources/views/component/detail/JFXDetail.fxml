<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<VBox styleClass="backgroundPane" spacing="10.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <HBox>
        <Label fx:id="titleLabel" styleClass="title-label" text="详情"/>
    </HBox>
    <ScrollPane fitToWidth="true" fitToHeight="true" VBox.vgrow="ALWAYS">
        <StackPane>
            <GridPane fx:id="detailGrid" styleClass="grid-pane-detail"/>
        </StackPane>
        <padding>
            <Insets bottom="10.0" top="10.0"/>
        </padding>
    </ScrollPane>
    <HBox fx:id="toolBottom" alignment="BOTTOM_RIGHT" spacing="10.0">
        <VBox.margin>
            <Insets/>
        </VBox.margin>
    </HBox>
</VBox>
